<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_engine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.babbel.renuka.languagegame.activities.GameEngineActivity">
    <TextView
        android:id="@+id/option3_txt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:rotation="135"
        android:text="Option 3"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/option2_txt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:rotation="225"
        android:text="Option 2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/option1_txt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:rotation="45"
        android:text="Option 1"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/option4_txt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:rotation="315"
        android:text="Option 4"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/neutral" />

        <TextView
            android:id="@+id/player_3_txt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:rotation="135"
            android:text="language"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/player_2_txt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/player_3_txt"
            android:gravity="center"
            android:rotation="225"
            android:text="language"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/player_1_txt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/player_3_txt"
            android:gravity="center"
            android:rotation="45"
            android:text="language"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/player_4_txt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/player_3_txt"
            android:layout_toRightOf="@+id/player_3_txt"
            android:gravity="center"
            android:rotation="315"
            android:text="language"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textSize="18sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/player_3_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/buzz_btn_selector"
        android:rotation="135"
        android:tag="3"
        android:text="3"
        android:textColor="@drawable/player_txt_color_selector"
        android:textSize="20sp"
        android:visibility="invisible" />


    <Button
        android:id="@+id/player_2_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/buzz_btn_selector"
        android:rotation="225"
        android:tag="2"
        android:text="2"
        android:textColor="@drawable/player_txt_color_selector"
        android:textSize="25sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/player_1_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buzz_btn_selector"
        android:rotation="45"
        android:tag="1"
        android:text="1"
        android:textColor="@drawable/player_txt_color_selector"
        android:textSize="25sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/player_4_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/buzz_btn_selector"
        android:rotation="315"
        android:tag="4"
        android:text="4"
        android:textColor="@drawable/player_txt_color_selector"
        android:textSize="25sp"
        android:visibility="invisible" />

</RelativeLayout>
